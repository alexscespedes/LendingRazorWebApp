@page
@model LendingRazorWeb.Pages.Loans.DetailModel
@{
    ViewData["Title"] = "Loan Details";
}

<h2>Loan Details</h2>

<div>
    <h4>Loan</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">Customer</dt>
        <dd class="col-sm-9">@Model.Loan?.Customer?.FullName</dd>
        
        <dt class="col-sm-3">Customer</dt>
        <dd class="col-sm-9">@Model.Loan?.PrincipalAmount.ToString("C")</dd>

        <dt class="col-sm-3">Interest Rate</dt>
        <dd class="col-sm-9">@Model.Loan?.InterestRate</dd>

        <dt class="col-sm-3">Terms (Months)</dt>
        <dd class="col-sm-9">@Model.Loan?.TermsMonth</dd>

        <dt class="col-sm-3">State Date</dt>
        <dd class="col-sm-9">@Model.Loan?.StartDate.ToString("yyyy-MM-dd")</dd>

        <dt class="col-sm-3">Status</dt>
        <dd class="col-sm-9">@Model.Loan?.LoanStatus</dd>

        <dt class="col-sm-3">User</dt>
        <dd class="col-sm-9">@Model.Loan?.User?.Username</dd>

        <dt class="col-sm-3">Created At</dt>
        <dd class="col-sm-9">@Model.Loan?.CreatedAt.ToString("yyyy-MM-dd")</dd>
    </dl>
</div>

<div>
    <a asp-page="Edit" asp-route-id="@Model.Loan?.Id" class="btn btn-primary">Edit</a>
    <a asp-page="Index" class="btn btn-secondary">Back to List</a>
</div>
