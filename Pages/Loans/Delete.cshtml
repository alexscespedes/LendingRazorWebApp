@page
@model LendingRazorWeb.Pages.Loans.DeleteModel
@{
    ViewData["Title"] = "Delete Loan";
}

<h2>Delete Loan</h2>

<h4>Are you sure you want to delete this loan?</h4>
<div>
    <h5>Loan</h5>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">Customer</dt>
        <dd class="col-sm-9">@Model.Loan?.Customer?.FirstName @Model.Loan?.Customer?.LastName</dd>

        <dt class="col-sm-3">Principal Amount</dt>
        <dd class="col-sm-9">@Model.Loan?.PrincipalAmount.ToString("C")</dd>

        <dt class="col-sm-3">Interest Rate</dt>
        <dd class="col-sm-9">@Model.Loan?.InterestRate%</dd>

        <dt class="col-sm-3">Terms (Months)</dt>
        <dd class="col-sm-9">@Model.Loan?.TermsMonth</dd>

        <dt class="col-sm-3">Start Date</dt>
        <dd class="col-sm-9">@Model.Loan?.StartDate</dd>

        <dt class="col-sm-3">Status</dt>
        <dd class="col-sm-9">@Model.Loan?.LoanStatus</dd>

        <dt class="col-sm-3">User</dt>
        <dd class="col-sm-9">@Model.Loan?.User?.Username</dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Loan.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-page="Index" class="btn btn-secondary">Back to List</a>
    </form>

</div>
