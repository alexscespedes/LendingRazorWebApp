@page
@model LendingRazorWeb.Pages.Customers.DeleteModel
@{
    ViewData["Title"] = "Delete";
}

<h2>Delete</h2>

<p class="text-danger">@Model.ErrorMessage</p>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Book</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(m => m.Customer!.FirstName)</dt>
        <dd class="col-sm-10">@Model.Customer?.FirstName</dd>


        <dt class="col-sm-2">@Html.DisplayNameFor(m => m.Customer!.LastName)</dt>
        <dd class="col-sm-10">@Model.Customer?.LastName</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(m => m.Customer!.Phone)</dt>
        <dd class="col-sm-10">@Model.Customer?.Phone</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(m => m.Customer!.Email)</dt>
        <dd class="col-sm-10">@Model.Customer?.Email</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(m => m.Customer!.Address)</dt>
        <dd class="col-sm-10">@Model.Customer?.Address</dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Customer.Id">
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
