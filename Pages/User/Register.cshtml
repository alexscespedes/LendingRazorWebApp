@page
@model LendingRazorWeb.Pages.User.RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div style="max-width: 400px; margin: 50px auto;">
    <h2>Register</h2>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div style="color: red; margin-bottom: 10px;">@Model.ErrorMessage</div>
    }

    <form method="post">
        <div style="margin-bottom: 15px;">
            <label>Username:</label>
            <input type="text" asp-for="Input.Username" style="width: 100%; padding: 8px;" required />
        </div>

        <div style="margin-bottom: 15px;">
            <label>Password:</label>
            <input type="password" asp-for="Input.Password" style="width: 100%; padding: 8px;" required />
        </div>

        <button type="submit" style="padding: 10px 20px; background: #007bff; color: white; border: none; cursor: pointer;">
            Register
        </button>
    </form>

    <p style="margin-top: 15px;">
        Already have an account? <a asp-page="Login">Login here</a>
    </p>
</div>
